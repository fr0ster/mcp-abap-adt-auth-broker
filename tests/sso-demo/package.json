{
  "name": "sso-demo",
  "version": "1.0.0",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9"
  },
  "scripts": {
    "start": "cds-serve",
    "build:cds": "npx cds build --production",
    "build:mta": "npx mbt build -t gen",
    "deploy:cf": "cf deploy gen/sso-demo_1.0.0.mtar --abort-on-error --delete-services",
    "service-key:create": "node ./service-key.js create",
    "service-key:fetch": "node ./service-key.js fetch",
    "service-key:delete": "node ./service-key.js delete",
    "test:mcp-auth": "sh ./run-mcp-auth.sh",
    "test:mcp-sso": "sh ./run-mcp-sso.sh"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    }
  }
}
