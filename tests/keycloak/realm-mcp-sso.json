{
  "realm": "mcp-sso",
  "enabled": true,
  "clients": [
    {
      "clientId": "mcp-sso-cli",
      "name": "MCP SSO CLI",
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://localhost:3001/*",
        "urn:ietf:wg:oauth:2.0:oob"
      ],
      "webOrigins": [
        "*"
      ],
      "attributes": {
        "oauth2.device.authorization.grant.enabled": "true",
        "oauth2.device.polling.interval": "5"
      }
    },
    {
      "clientId": "mcp-sso-saml",
      "name": "MCP SSO SAML",
      "protocol": "saml",
      "enabled": true,
      "adminUrl": "http://localhost:3002",
      "baseUrl": "http://localhost:3002",
      "attributes": {
        "saml_force_post_binding": "false",
        "saml_name_id_format": "username",
        "saml_idp_initiated_sso_url_name": "mcp-sso-saml"
      },
      "redirectUris": [
        "http://localhost:3002/acs"
      ]
    }
  ],
  "users": [
    {
      "username": "demo",
      "enabled": true,
      "emailVerified": true,
      "requiredActions": [],
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ]
    }
  ]
}
